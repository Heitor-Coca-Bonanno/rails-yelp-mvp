<div class="container">
  <h1><%= @restaurant.name %></h1>
  
  <h4 class="card"><%= @restaurant.category %></h2>

  <h4 class="card"><%= @restaurant.address %></h2>

  <h4 class="card"><%= @restaurant.phone_number %></h2>

  <ul>
   <% @restaurant.reviews.each do |r| %>
    <li><%= r.content %> <%= r.rating %></li>
    <% end %>
  </ul>
  <div class="card">
    <h3>New Review of <%= @restaurant.name %></h3>

    <%= simple_form_for [@restaurant, @review] do |f| %>
      <%= f.input :content %>
      <%= f.input :rating, collection: (0..5) %>
      <%= f.submit %>
    <% end %>
  </div>
  
  <%= link_to "Back", restaurants_path, class: "btn btn-outline-secondary btn-rounded mb-4" %>
</div>